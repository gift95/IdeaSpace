package com.yunhe.day04;

import java.util.Scanner;

public class Demo06 {
	private static Scanner get;
	public static void main(String[] args) {
		// TODO 自动生成的方法存根
		int m;
		int j;
		get = new Scanner(System.in);
		m = get.nextInt();
for(int i= 0;i<=m;i++){
	for(j = 0;j<2*i-1;j++){
		System.out.print("*");
	}
	System.out.print("\n");
}

	}

}
